{
    "info": {
        "name": "ViewHistory API Tests",
        "description": "Test các API ViewHistory"
    },
    "item": [
        {
            "name": "1. Track View - Từ Search",
            "request": {
                "method": "POST",
                "url": "http://localhost:8080/api/public/view-history/track?hotelId=1&source=SEARCH&searchQuery=resort%20đà%20nẵng",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ]
            }
        },
        {
            "name": "2. Track View - Từ Homepage",
            "request": {
                "method": "POST",
                "url": "http://localhost:8080/api/public/view-history/track?hotelId=5&source=HOMEPAGE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ]
            }
        },
        {
            "name": "3. Track View - Từ Recommendation",
            "request": {
                "method": "POST",
                "url": "http://localhost:8080/api/public/view-history/track?hotelId=10&source=RECOMMENDATION",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ]
            }
        },
        {
